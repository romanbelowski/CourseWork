@using CourseWork.Models
@using CourseWork.Models.ViewModels
@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Is Blocked</th>
            <th>Has Password Restrictions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.IsBlocked ? "Yes" : "No")</td>
                <td>@(user.HasPasswordRestrictions ? "Yes" : "No")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
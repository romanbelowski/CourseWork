@using CourseWork.Models
@using CourseWork.Models.ViewModels
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Unblock Users";
}

<h1>Unblock Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Lockout End</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.LockoutEnd</td>
                <td>
                    <form asp-action="UnlockUser" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-warning">Unlock</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>